extends layout_main

block content
    container.col-md-8

        br
        h2 Créer un entrepreneur
        br
        div
            p Pour plus d'informations sur comment concernant les entrepreneurs,&nbsp;
                a(role='button', data-toggle='collapse', href='#info', aria-expanded='false', aria-controls='info') lisez-en plus ici
            #info.collapse
                .well
                    p Informations concernant les entrepreneurs:
                        br

        hr
        if (ok != undefined)
            .alert.alert-success(role="alert") #{ok}
        if (msg != undefined)
            .alert.alert-info(role="alert") #{msg}
        if (err != undefined)
            .alert.alert-warning(role="alert") #{err}
        form(action="/dal/entrepreneurs/create", method="post").input-group.input-group-lg
            #e1
                p Nom de l'entrepreneur
                div.input-lg-8.input-lg
                    input(type="text", name="nom", placeholder="nom de l'entrepreneur", required=true).form-control
            br
            #e2
                p Prénom de l'entrepreneur
                div.input-lg-8.input-lg
                    input(type="textarea", name="prenom", placeholder="description du parcour" required=true).form-control
            br
            #e3b
                p Mettre à jour la photo de profil
                div.input-lg-8.input-lg
                    input(type="file", name="photo", onchange="previewFile()")
                p.help-block Pour un rendu optimal, l'image doit êttre de format carré.
            #e3c
                div.input-lg-8
                    img(id="imgPreview", name="newPhoto", src="", style="max-height:200px", alt="Image preview...")
                    input(id="newPhoto", type="textarea", name="newPhoto", style="visibility: hidden;")
            br
            #e2
                p Interview de l'entrepreneur
                div.input-lg-8.input-lg
                    button.btn#plusIqr(type="button") Ajouter Q/R
                    button.btn#moinsIqr(type="button") Supprimer Q/R
                br
                #interview
            br
            #e2
                p Indice
                div.input-lg-8.input-lg
                     button.btn#plusInd(type="button") Ajouter Indice
                     button.btn#moinsInd(type="button") Supprimer Indice
                br
                #indice
            br
            div.actions
                input(type="submit", value="Créer l'entrepreneur").btn.btn-success